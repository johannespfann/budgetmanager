<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- ++++++++++++++++++++[Name]+++++++++++++++++++++++++++++ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".20"
                android:src="@drawable/ic_action_news1" />

            <EditText
                android:id="@+id/addentry_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".65"
                android:hint="123" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".15" />

        </LinearLayout>

        <!-- ++++++++++++++++++++[Category]+++++++++++++++++++++++++++++-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".20"
                android:src="@drawable/ic_action_folder_tabs" />

            <Spinner
                android:id="@+id/addentry_spinner_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".65" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".15" />

        </LinearLayout>

        <!-- ++++++++++++++++++++[Betrag]+++++++++++++++++++++++++++++-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".20" />

            <TextView
                android:id="@+id/addentry_plusminus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".10"
                android:clickable="true"
                android:text="+"
                android:textSize="12dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addentry_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".55"
                android:hint="123" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".15" />

        </LinearLayout>


        <!-- ++++++++++++++++++++[Memo]+++++++++++++++++++++++++++++-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".20"
                android:src="@drawable/ic_action_document" />

            <EditText
                android:id="@+id/addentry_memo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".65"
                android:hint="123" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".15" />

        </LinearLayout>

        <!-- ++++++++++++++++++++[Tags-List]+++++++++++++++++++++++++++++-->

        <LinearLayout
            android:id="@+id/addentry_linearlayout_taglist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




        </LinearLayout>
        <!-- ++++++++++++++++++++[Tags]+++++++++++++++++++++++++++++-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".20"
                android:src="@drawable/ic_action_tags" />

            <Spinner
                android:id="@+id/addentry_spinner_tags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".65" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".85"/>

            <ImageView
                android:id="@+id/addentry_add_another_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:src="@drawable/ic_action_new_label"
                android:clickable="true" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>
